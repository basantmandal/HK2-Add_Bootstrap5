<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add Bootstrap CSS File -->
        <referenceBlock name="head.additional">
            <block class="HK2\AddBootstrap5\Block\Index" name="addbootstrap5_header" template="HK2_AddBootstrap5::header.phtml" />
        </referenceBlock>

        <!-- Add Bootstrap JS Activator -->
        <referenceContainer name="before.body.end">
            <block class="HK2\AddBootstrap5\Block\Index" name="addbootstrap5_footer" template="HK2_AddBootstrap5::footer.phtml"/>
        </referenceContainer>
    </body>
</page>
